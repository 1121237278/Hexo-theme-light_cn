#header
  text-shadow 0 0 1px #fff
  margin 50px auto
  a
    color #999
    &:hover
      color color-link
      text-decoration none

  img
    border-radius 50%
    height 4.5em
    float left
    margin 0 0.8em
    transition height 1s, transform 1s
    &:hover
      height 9em
      transform rotate(360deg)
      -ms-transform rotate(360deg)  /* IE 9 */
      -webkit-transform rotate(360deg) /* Safari and Chrome */
      -o-transform rotate(360deg)    /* Opera */
      -moz-transform rotate(360deg)    /* Firefox */


  h1
    font-weight normal
    font-size 2.5em
    line-height 1

  h2
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px
  
  #main-nav
    font-family font-title
    line-height 2.5em
    font-size 1.1em
    ul
      list-style none
      li
        float left
        margin-left 30px