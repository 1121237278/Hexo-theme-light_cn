#header
  text-shadow 0 0 1px #fff
  margin-bottom 25px

  .header-content
    padding 25px 0px 25px 0
    .col-one
      width 100%
      img
        border-radius 50%
        height 5em
        float left
        margin 0 0.8em
        transition height 0.3s, transform 1s
        &:hover
          height 8em
          transform rotate(360deg)
          -ms-transform rotate(360deg)  /* IE 9 */
          -webkit-transform rotate(360deg) /* Safari and Chrome */
          -o-transform rotate(360deg)    /* Opera */
          -moz-transform rotate(360deg)    /* Firefox */

    .col-two
      margin-left -50%
      img
        height 5em
        @media screen and (max-width: 600px)
          display none

  .header-nav
    margin-bottom 20px
    padding 0 15px
    border-bottom 2px solid #eee

  .header-nav a
    display block
    padding 10px 10px 10px 10px
    float left
    &:hover
      font-size 1.2em

  #main-nav
    font-family font-title
    font-size 1.1em
    ul
      list-style none
      li
        float left
        padding 13px 15px
        &:hover
          background-color #EEE
          color #999
          font-style italic
    
  #sub-nav
    font-family font-title
    font-size 1.1em
    @media screen and (max-width: 600px)
      display none
    ul
      list-style none
      li
        float right
        padding 13px 15px

  a
    color #999
    &:hover
      color color-link
      text-decoration none

  h1
    font-weight normal
    font-size 2.5em
    line-height 1

  h2
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px
  


