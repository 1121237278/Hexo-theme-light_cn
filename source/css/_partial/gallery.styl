.gallery-img{
	max-width: 365px;
	float: left;
	margin: 5px;
	@media screen and (max-width: 1260px) {
		max-width: 260px;
	}
	@media screen and (max-width: 900px) {
		max-width: 180px;
	}
	@media screen and (max-width: 400px) {
		max-width: 260px;
		position: relative;
		left: -15px;
	}
}

.gallery{
	padding: 0 30px 30px 30px;
}

.gallery h1, .gallery h2{
      font-weight: normal
      border-bottom: 1px solid color-border
      padding-bottom: 10px
      margin-top: 20px	
      clear: both;
      margin-bottom: 5px;
}
